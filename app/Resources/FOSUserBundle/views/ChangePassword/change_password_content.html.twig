{% trans_default_domain 'FOSUserBundle' %}


        <div class="card-header">Register an Account</div>
        <div class="card-body">
            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            {{ form_widget(form.current_password, { 'attr': {'class': "form-control", 'placeholder': "Current password"} }) }}

                        </div>
                    </div>

                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            {{ form_widget(form.plainPassword.first, { 'attr': {'class': "form-control", 'placeholder': "New password"} }) }}

                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            {{ form_widget(form.plainPassword.second, { 'attr': {'class': "form-control", 'placeholder': "Repeat new password"} }) }}

                        </div>
                    </div>

                </div>
            </div>

            <input  class="btn btn-secondary btn-block" type="submit" value="{{ 'change_password.submit'|trans }}" />

            {{ form_end(form) }}

            <div class="text-center">
                <a class="d-block small" href="{{ path('fos_user_profile_show') }}">Back</a>

            </div>
        </div>



