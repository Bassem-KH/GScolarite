{% trans_default_domain 'FOSUserBundle' %}

        <div class="card-header">Register an Account</div>
        <div class="card-body">
            {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            {{ form_widget(form.username, { 'attr': {'class': "form-control", 'placeholder': "Username"} }) }}
                        </div>
                    </div>

                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            {{ form_widget(form.email, { 'attr': {'class': "form-control", 'placeholder': "Email"} }) }}

                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            {{ form_widget(form.current_password, { 'attr': {'class': "form-control", 'placeholder': "Current password"} }) }}

                        </div>
                    </div>

                </div>
            </div>

            <input  class="btn btn-primary btn-block" type="submit" value="{{ 'profile.edit.submit'|trans }}" />

            {{ form_end(form) }}

            <div class="text-center">
                <a class="d-block small" href="{{ path('fos_user_change_password') }}">Change Password</a>
                <a class="d-block small" href="{{ path('fos_user_profile_show') }}">Back</a>

            </div>
        </div>


