{% trans_default_domain 'FOSUserBundle' %}

<div class="card-body">
    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}

    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <div class="form-label-group">
                    {{ form_widget(form.plainPassword.first, { 'attr': {'class': "form-control", 'placeholder': "Password"} }) }}

                </div>
            </div>

        </div>
    </div>
    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <div class="form-label-group">
                    {{ form_widget(form.plainPassword.second, { 'attr': {'class': "form-control", 'placeholder': "Confirm Password"} }) }}

                </div>
            </div>
        </div>
    </div>
    <input  class="btn btn-secondary btn-block"   type="submit" value="{{ 'resetting.reset.submit'|trans }}" />

    {{ form_end(form) }}

    <div class="text-center">
        <a class="d-block small mt-3" href="{{ path('fos_user_security_login') }}">Page Authentification</a>
        <a class="d-block small" href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√©e ?</a>
    </div>
</div>


