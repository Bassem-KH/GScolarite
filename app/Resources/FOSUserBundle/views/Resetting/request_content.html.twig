{% trans_default_domain 'FOSUserBundle' %}
<div class="card-body">
    <div class="text-center mb-4">
        <h4>Forgot your password?</h4>
        <p>Enter your email address and we will send you instructions on how to reset your password.</p>
    </div>
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
        <div class="form-group">
            <div class="form-label-group">
                <input type="text" id="username" name="username" class="form-control" placeholder="{{ 'resetting.request.username'|trans }}"required="required" />

            </div>
        </div>
        <input class="btn btn-secondary btn-block" type="submit" value="{{ 'resetting.request.submit'|trans }}" />

    </form>
    <div class="text-center">
        <a class="d-block small mt-3" href="{{ path('fos_user_security_login') }}">Page Authentification</a>
       {# <a class="d-block small mt-3" href="{{ path('fos_user_registration_register') }}">Register an Account</a>#}
    </div>
</div>
